<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/login_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_h">

    <TextView
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/title_back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/title_bar_back"
        android:layout_marginLeft="@dimen/title_bar_back_left"/>

    <TextView
        android:id="@+id/title_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_bar_text_size"
        android:text="首页"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/title_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_bar_add"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/title_bar_add_right"/>

    <ImageView
        android:id="@+id/title_save_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_bar_history"
        android:layout_toLeftOf="@+id/title_add_image"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/title_bar_history_right"/>

</RelativeLayout>