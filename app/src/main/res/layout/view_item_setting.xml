<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@android:color/white">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/setting_item_left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medata"
        android:layout_marginLeft="@dimen/setting_item_icon_left_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setting_item_text"
        android:textSize="@dimen/setting_item_text_size"
        android:text="12345"
        android:layout_toRightOf="@+id/setting_item_left_icon"
        android:layout_marginLeft="@dimen/setting_item_text_left_margin"
        android:layout_centerVertical="true"
        android:textColor="@color/main_tab_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/task_arrow"
        android:layout_marginRight="@dimen/setting_item_right_margin"/>

    <View
        android:id="@+id/setting_item_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/item_divide"/>


</RelativeLayout>